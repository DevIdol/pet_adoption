<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs', {title: "Pet Adoption | Create Pet" }) %>
  </head>
  <body>
    <header><%- include('./partials/header.ejs') %></header>
    <section class="account-sec">
      <div class="l-inner">
        <%- include('./partials/sidebar.ejs', { user }) %>
        <div class="account-wrapper">
          <div class="pet-form-wrapper">
            <h2>Add New Pet</h2>
            <p class="needed"><%= needed %></p>
            <% if (errors) { %> <% errors.forEach(function(error) { %>
            <div class="error"><%= error.msg %></div>
            <% }); %> <% } %>
            <form
              action="/admin/pets/create/"
              class="pet-form"
              enctype="multipart/form-data"
              method="post"
            >
              <input type="file" name="images" id="images" multiple />
              <br /><br />
              <img id="image" src="" class="img-update-pet-form" />
              <input
                class="input"
                type="text"
                name="name"
                id="name"
                placeholder="Name"
                value="<%= pet.name %>"
              />
              <br /><br />

              <input
                class="input"
                type="text"
                name="breed"
                id="breed"
                placeholder="Breed"
                value="<%= pet.breed %>"
              /><br /><br />

              <input
                class="input"
                type="text"
                name="age"
                id="age"
                placeholder="Age"
                value="<%= pet.age %>"
              /><br /><br />

              <select name="size">
                <option><--- Select Size ---></option>
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Big">Big</option>
              </select>
              <br /><br />
              <select name="sex">
                <option><--- Select Sex ---></option>
                <option value="male">male</option>
                <option value="female">female</option>
              </select>
              <br /><br />
              <select name="kind">
                <option><--- Select Kind ---></option>
                <option value="cat">cat</option>
                <option value="dog">dog</option>
                <option value="other">other</option>
              </select>
              <br /><br />

              <textarea
                name="description"
                id="description"
                cols="30"
                rows="10"
                placeholder="Good pet to adopt"
              ></textarea>
              <br /><br />
              <label for="ava">Available</label>
              <select name="ava">
                <option value="true">true</option>
                <option value="false">false</option>
              </select>
              <br /><br />
              <button class="btn" type="submit" name="submit-button">
                Add Pet
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
    <%- include('./partials/script.ejs') %>
  </body>
</html>
