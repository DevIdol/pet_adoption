<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs', {title: "Pet Adoption | Create Donation Request" }) %>
</head>

<body>
  <header><%- include('./partials/header.ejs') %></header>
  <section class="account-sec">
    <div class="l-inner">
      <%- include('./partials/sidebar.ejs', { user }) %>
      <div class="account-wrapper">
        <div class="pet-form-wrapper">
          <h2>Add New Donation Request</h2>
          <form action="/admin/donate-request/create" class="donation-form" method="post">
            <% if (errors) { %> <% errors.forEach(function(error) { %>
            <div class="error"><%= error.msg %></div>
            <% }); %> <% } %>
            <input class="input" type="text" name="itemName" placeholder="Item Name" value="<%= donation.itemName %>" />
            <br /><br />
            <input class="input" type="number" min="1" name="quantity" placeholder="Quantity" value="<%= donation.quantity %>" />
            <br /><br />
            <textarea name="description" cols="30" rows="10" placeholder="Description">
<%= donation.description %></textarea>
            <br /><br />
            <button class="btn" type="submit" name="submit-button">
              Add Donation Request
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
  <%- include('./partials/script.ejs') %>
</body>

</html>